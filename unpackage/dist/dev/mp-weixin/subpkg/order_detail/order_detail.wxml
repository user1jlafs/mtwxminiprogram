<view class="container"><view class="status-card"><view class="status-icon"><uni-icons vue-id="25c39a8c-1" type="{{$root.m0}}" size="32" color="#8B5A2B" bind:__l="__l"></uni-icons></view><view class="status-info"><text class="status-text">{{$root.m1}}</text><text class="status-desc">{{$root.m2}}</text></view></view><view class="info-card"><view class="card-title"><uni-icons vue-id="25c39a8c-2" type="location" size="16" color="#8B5A2B" bind:__l="__l"></uni-icons><text>配送信息</text></view><view class="delivery-info"><text class="address">{{orderDetail.deliveryAddress}}</text></view></view><view class="info-card"><view class="card-title"><uni-icons vue-id="25c39a8c-3" type="shop" size="16" color="#8B5A2B" bind:__l="__l"></uni-icons><text>订单商品</text></view><view class="product-list"><block wx:for="{{orderDetail.orderItems}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="product-item"><image class="product-image" src="{{item.product.image}}" mode="aspectFill"></image><view class="product-info"><text class="product-name">{{item.product.name}}</text><view class="product-specs"><block wx:for="{{item.specValues}}" wx:for-item="spec" wx:for-index="__i0__" wx:key="id"><text class="spec-tag">{{spec.value}}</text></block></view></view><view class="product-price"><text class="price">{{"¥"+item.price}}</text><text class="quantity">{{"x"+item.quantity}}</text></view></view></block></view></view><view class="info-card"><view class="card-title"><uni-icons vue-id="25c39a8c-4" type="list" size="16" color="#8B5A2B" bind:__l="__l"></uni-icons><text>订单信息</text></view><view class="order-info"><view class="info-item"><text class="label">订单编号</text><text class="value">{{orderDetail.orderNumber}}</text></view><view class="info-item"><text class="label">下单时间</text><text class="value">{{$root.m3}}</text></view><view class="info-item"><text class="label">备注</text><text class="value">{{orderDetail.note||'无'}}</text></view></view></view><view class="info-card"><view class="payment-info"><view class="info-item"><text class="label">商品总额</text><text class="value">{{"¥"+orderDetail.totalAmount}}</text></view><block wx:if="{{orderDetail.discount>0}}"><view class="info-item"><text class="label">优惠金额</text><text class="value">{{"-¥"+orderDetail.discount}}</text></view></block><view class="info-item total"><text class="label">实付金额</text><text class="value price-total">{{"¥"+orderDetail.totalAmount}}</text></view></view></view></view>