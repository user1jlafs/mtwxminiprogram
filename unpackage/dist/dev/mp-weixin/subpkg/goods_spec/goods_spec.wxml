<view class="container"><view class="product-info-section"><image class="product-image" src="{{productInfo.image}}" mode="aspectFill"></image><view class="product-details"><text class="product-name">{{productInfo.name}}</text><view class="product-meta"><text class="sugar-info">{{productInfo.description}}</text></view><text class="product-price">{{"¥"+selectedPrice}}</text></view></view><view class="specs-container"><block wx:for="{{specs}}" wx:for-item="specGroup" wx:for-index="specIndex" wx:key="specIndex"><view class="spec-section"><text class="spec-title">{{specGroup.name}}</text><view class="spec-options"><block wx:for="{{specGroup.specValues}}" wx:for-item="specValue" wx:for-index="valueIndex" wx:key="valueIndex"><view data-event-opts="{{[['tap',[['selectSpec',['$0','$1',specValue.extraCost||0],[[['specs','',specIndex,'type']],[['specs','',specIndex],['specValues','',valueIndex,'value']]]]]]]}}" class="{{['spec-option',(selectedSpecs[specGroup.type]===specValue.value)?'active':'']}}" bindtap="__e"><view class="option-content"><text>{{specValue.value}}</text><block wx:if="{{specValue.extraCost>0}}"><text class="extra-price">{{"+¥"+specValue.extraCost}}</text></block></view></view></block></view></view></block></view><view class="bottom-bar"><view class="quantity-control"><view data-event-opts="{{[['tap',[['decreaseQuantity',['$event']]]]]}}" class="quantity-btn minus" bindtap="__e"><uni-icons vue-id="63df59e8-1" type="minus" size="18" color="#8B5A2B" bind:__l="__l"></uni-icons></view><text class="quantity-text">{{quantity}}</text><view data-event-opts="{{[['tap',[['increaseQuantity',['$event']]]]]}}" class="quantity-btn plus" bindtap="__e"><uni-icons vue-id="63df59e8-2" type="plus" size="18" color="#8B5A2B" bind:__l="__l"></uni-icons></view></view><view class="action-buttons"><view data-event-opts="{{[['tap',[['addToCart',['$event']]]]]}}" class="add-to-cart-btn" bindtap="__e"><text>加入购物车</text></view><view data-event-opts="{{[['tap',[['buyNow',['$event']]]]]}}" class="buy-now-btn" bindtap="__e"><text>立即购买</text></view></view></view></view>