/* 水平间距 */
.section-title-box {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  position: relative;
}
.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #8B5A2B;
  position: relative;
  padding-left: 20rpx;
}
.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 6rpx;
  height: 30rpx;
  background-color: #8B5A2B;
  border-radius: 3rpx;
}
.tea-decoration {
  position: absolute;
  right: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 30rpx;
  height: 30rpx;
  background-color: #FFF0E5;
  border-radius: 50%;
}
.tea-decoration::before {
  content: '';
  position: absolute;
  width: 15rpx;
  height: 6rpx;
  background-color: #C39B77;
  border-radius: 3rpx;
  top: 12rpx;
  left: -10rpx;
}
.bubble-decoration {
  position: absolute;
  right: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #FFF0E5;
  opacity: 0.6;
}
.bubble-decoration::before, .bubble-decoration::after {
  content: '';
  position: absolute;
  border-radius: 50%;
  background-color: #FFF0E5;
}
.bubble-decoration::before {
  width: 20rpx;
  height: 20rpx;
  right: -15rpx;
  top: 5rpx;
}
.bubble-decoration::after {
  width: 10rpx;
  height: 10rpx;
  right: -25rpx;
  top: 15rpx;
}

