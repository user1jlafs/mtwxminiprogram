/* 水平间距 */
.section-title-box {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  position: relative;
}
.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #8B5A2B;
  position: relative;
  padding-left: 20rpx;
}
.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 6rpx;
  height: 30rpx;
  background-color: #8B5A2B;
  border-radius: 3rpx;
}

