.cart-component {
  position: relative;
  width: 100%;
  height: 100%;
  z-index: 900;
}
/* 购物车抽屉样式 */
.cart-drawer {
  position: fixed;
  bottom: 100rpx;
  /* 与底部购物车栏的高度对应 */
  left: 0;
  width: 100%;
  background-color: #FFFFFF;
  border-radius: 30rpx 30rpx 0 0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 999;
  -webkit-transform: translateY(100%);
          transform: translateY(100%);
  transition: -webkit-transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1), -webkit-transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  max-height: 65vh;
  /* 限制最大高度为视口高度的65% */
  display: flex;
  flex-direction: column;
}
.cart-drawer.active {
  -webkit-transform: translateY(0);
          transform: translateY(0);
}
.cart-drawer .drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
  position: relative;
}
.cart-drawer .drawer-header::after {
  content: '';
  position: absolute;
  top: 15rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #E0E0E0;
  border-radius: 3rpx;
}
.cart-drawer .drawer-header .drawer-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-top: 15rpx;
  position: relative;
}
.cart-drawer .drawer-header .drawer-title::before {
  content: '';
  position: absolute;
  left: -10rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 4rpx;
  height: 24rpx;
  background-color: #8B5A2B;
  border-radius: 2rpx;
}
.cart-drawer .drawer-header .select-all {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666666;
  margin-left: auto;
  margin-right: 20rpx;
  background-color: #FFF8F0;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  transition: all 0.2s ease;
}
.cart-drawer .drawer-header .select-all:active {
  opacity: 0.8;
}
.cart-drawer .drawer-header .select-all text {
  margin-left: 6rpx;
}
.cart-drawer .drawer-header .clear-btn {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #999999;
  background-color: #F5F5F5;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  transition: all 0.2s ease;
}
.cart-drawer .drawer-header .clear-btn:active {
  opacity: 0.8;
}
.cart-drawer .drawer-header .clear-btn text {
  margin-left: 6rpx;
}
.cart-drawer .cart-items {
  flex: 1;
  overflow-y: auto;
  padding: 10rpx 10rpx;
}
.cart-drawer .cart-items .empty-cart {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  color: #999999;
  font-size: 28rpx;
}
.cart-drawer .cart-items .empty-cart .uni-icons {
  margin-bottom: 20rpx;
  opacity: 0.6;
}
.cart-drawer .cart-items .empty-cart .empty-cart-tip {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #BBBBBB;
}
.cart-drawer .cart-items .cart-item {
  display: flex;
  align-items: center;
  padding: 25rpx 15rpx;
  border-bottom: 1rpx solid #F5F5F5;
  position: relative;
  transition: all 0.2s ease;
}
.cart-drawer .cart-items .cart-item:active {
  background-color: #FAFAFA;
}
.cart-drawer .cart-items .cart-item .item-select {
  padding: 10rpx;
  margin-right: 10rpx;
}
.cart-drawer .cart-items .cart-item .item-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  margin-right: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  background-color: #FFF8F0;
  object-fit: cover;
}
.cart-drawer .cart-items .cart-item .item-info {
  flex: 1;
  min-width: 0;
  padding-right: 10rpx;
}
.cart-drawer .cart-items .cart-item .item-info .item-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.cart-drawer .cart-items .cart-item .item-info .item-specs {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 10rpx;
  display: block;
  line-height: 1.3;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.cart-drawer .cart-items .cart-item .item-info .item-price-box .item-price {
  font-size: 30rpx;
  color: #E57373;
  font-weight: bold;
}
.cart-drawer .cart-items .cart-item .quantity-control {
  display: flex;
  align-items: center;
  position: relative;
  margin-left: 5rpx;
}
.cart-drawer .cart-items .cart-item .quantity-control .quantity-btn {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}
.cart-drawer .cart-items .cart-item .quantity-control .quantity-btn.minus {
  background-color: #F5F5F5;
  border: 1rpx solid #E0E0E0;
}
.cart-drawer .cart-items .cart-item .quantity-control .quantity-btn.minus:active {
  opacity: 0.8;
}
.cart-drawer .cart-items .cart-item .quantity-control .quantity-btn.plus {
  background-color: #8B5A2B;
  box-shadow: 0 2rpx 6rpx rgba(139, 90, 43, 0.3);
}
.cart-drawer .cart-items .cart-item .quantity-control .quantity-btn.plus:active {
  opacity: 0.8;
  -webkit-transform: scale(0.95);
          transform: scale(0.95);
}
.cart-drawer .cart-items .cart-item .quantity-control .quantity-text {
  width: 40rpx;
  text-align: center;
  font-size: 26rpx;
  color: #333333;
  font-weight: bold;
}
/* 遮罩层样式 */
.cart-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 998;
  -webkit-backdrop-filter: blur(2px);
          backdrop-filter: blur(2px);
  -webkit-animation: fadeIn 0.3s ease;
          animation: fadeIn 0.3s ease;
}
@-webkit-keyframes fadeIn {
from {
    opacity: 0;
}
to {
    opacity: 1;
}
}
@keyframes fadeIn {
from {
    opacity: 0;
}
to {
    opacity: 1;
}
}
/* 底部购物车栏样式 */
.cart-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  height: 98rpx;
  background-color: #333333;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  border-radius: 20rpx 20rpx 0 0;
  z-index: 1000;
  overflow: hidden;
}
.cart-bar::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 2rpx;
  background: linear-gradient(to right, #C39B77, transparent);
  opacity: 0.5;
}
.cart-bar .cart-info {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}
.cart-bar .cart-info .cart-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #666666;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 15rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.3);
  position: relative;
  top: -15rpx;
  transition: all 0.3s ease;
  border: 3rpx solid #333333;
}
.cart-bar .cart-info .cart-icon.active {
  background: linear-gradient(135deg, #C39B77, #8B5A2B);
  -webkit-transform: translateY(-5rpx);
          transform: translateY(-5rpx);
}
.cart-bar .cart-info .cart-icon .cart-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  background-color: #E57373;
  color: #FFFFFF;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 4rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  -webkit-animation: pulse 2s infinite;
          animation: pulse 2s infinite;
}
.cart-bar .cart-info .price-info .total-price {
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: bold;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.2);
}
.cart-bar .checkout-btn {
  width: 220rpx;
  height: 100%;
  background-color: #CCCCCC;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}
.cart-bar .checkout-btn.active {
  background: linear-gradient(to right, #C39B77, #8B5A2B);
}
.cart-bar .checkout-btn.active::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0.1), transparent);
}
.cart-bar .checkout-btn.active:active {
  -webkit-transform: scale(0.98);
          transform: scale(0.98);
}
.cart-bar .checkout-btn text {
  position: relative;
  z-index: 1;
}
@-webkit-keyframes pulse {
0% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
50% {
    -webkit-transform: scale(1.1);
            transform: scale(1.1);
}
100% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
}
@keyframes pulse {
0% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
50% {
    -webkit-transform: scale(1.1);
            transform: scale(1.1);
}
100% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
}

